<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiReleaseXamlBug.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Button Text="Open page" Clicked="Button_Clicked" />

            <Button x:Name="ShowErrorButton" Text="Show error" Clicked="ShowErrorButton_Clicked" />
            <Label x:Name="ErrorLabel" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
